@model Pet.Models.Roles

@{
    ViewData["Title"] = "Edit Access Right";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row page-titles mx-0">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin"  asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Access List</a></li>
            <span class="breadcrumb-item">Edit Access Right</span>
        </ol>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Access Right</h4>
            <div class="basic-form">
                <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoleId" />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label style="color:black">Role Name</label>
                            <input type="text" class="form-control" asp-for="RoleName" placeholder="Role Name">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label style="color:black">Description</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

