@model Pet.Models.Roles

@{
    ViewData["Title"] = "Confirm Removal Of Accsess Rights";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Access List</a></li>
            <span class="breadcrumb-item">Confirm Removal Of Accsess Rights</span>
        </ol>
        
    </div>
</div>
<div>
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Confirm Removal Of Accsess Rights</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td style="color:black">ID:</td>
                            <td>@Model.RoleId</td>
                        </tr>
                        <tr>
                            <td style="color:black">Access Name:</td>
                            <td>@Model.RoleName</td>
                        </tr>
                        <tr>
                            <td style="color:black">Description:</td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td style="color:black">Confirm Delete:</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@Model.RoleId">
                                    <input type="hidden" asp-for="RoleId" />
                                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
