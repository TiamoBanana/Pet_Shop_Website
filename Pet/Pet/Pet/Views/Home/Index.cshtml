@model Pet.ModelViews.HomeViewVM
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Products> allProduct = ViewBag.AllProducts;
}

<!-- product section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our</span> Products</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid, fuga quas itaque eveniet beatae optio.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        @foreach (var item in Model.Products)
                        {
                        <li class="active tab" >
                            <a href="@item.category.Alias">@item.category.CartName</a>
                        </li>
                        }

                    </ul>
                </div>
            </div>
        </div>

        <div class="row">

            @foreach (var item in Model.Products)
            {
                    @await Html.PartialAsync("_ListProductPartialView", item.lsProducts)

            }
            <div class="col-lg-12 col-md-6 text-center">
                <a href="shop.html" class="boxed-btn">More News</a>
            </div>
        </div>
    </div>
</div>
<!-- end product section -->
<!-- advertisement section -->
